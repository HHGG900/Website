	<script>
		$(function () {
			$('#homepageBtn').click(function () {
				location.href = "/Home/Supervise";
			});

			$('#lastPage').click(function () {
				history.back();
			});

		});

		function doSubmit() {
			var appellant_identity = $("input[name='appellant_identity']:checked").val();
			var category = $('input[type="radio"][name="category"]:checked').val()

			if ($('#appellant_name').val() == '') {
				alert('請輸入申訴者姓名！');
				$('#appellant_name').focus();
				return false;
			}
			else if (typeof (appellant_identity) == 'undefined') {
				alert('請輸入申訴者身份！');
				$('#appellant_identity1').focus();
				return false;
			}
			else if ($('#phone').val() == '') {
				alert('請輸入申訴人聯絡電話！');
				$('#phone').focus();
				return false;
			}
			else if (typeof (category) == 'undefined') {
				alert('請輸入申訴類別！');
				$('#category1').focus();
				return false;
			}
			else if ($('#reason').val() == '') {
				alert('請輸入事件原由！');
				$('#reason').focus();
				return false;
			}
			else {
				$('#wait_content').show();
				$('#wait').show();

				$('#form1').submit();
			}
		}
	</script>
