	<main class="main">
		<div class="wrapper">
			<div class="tableContainer">
				<form id="form1" name="form1" method="post" action="/employee_appeal/save" target="actFrame" enctype="multipart/form-data">
					<table>
						<thead>
							<tr>
								<th style="width: 20%;text-align: right;">申訴者姓名：</th>
								<td style="text-align: left;">
									<input type="text" class="form-control col-md-6" id="appellant_name" name="appellant_name">
								</td>
							</tr>
							<tr>
								<th style="text-align: right;">申訴者身份：</th>
								<td style="text-align: left;">
									<input type="radio" name="appellant_identity" id="appellant_identity1" value="1">個案本人
									<input type="radio" name="appellant_identity" id="appellant_identity2" value="2">個案家屬
									<input type="radio" name="appellant_identity" id="appellant_identity3" value="3">員工
								</td>
							</tr>
							<tr>
								<th style="text-align: right;">申訴者聯絡電話：</th>
								<td style="text-align: left;">
									<input type="text" class="form-control col-md-6" id="phone" name="phone">
								</td>
							</tr>
							<tr>
								<th style="text-align: right;">申訴者日期：</th>
								<td style="text-align: left;">2020.12.30 10:35</td>
							</tr>
							<tr>
								<th style="text-align: right;">申訴類別：</th>
								<td style="text-align: left;">
									<label class="nowrap" for="category1">
										<input type="radio" name="category" id="category1" value="1">受傷
									</label>
									<label class="nowrap" for="category2">
										<input type="radio" name="category" id="category2" value="2">不當處置
									</label>
									<label class="nowrap" for="category3">
										<input type="radio" name="category" id="category3" value="3">權益損
									</label>
									<label class="nowrap" for="category4">
										<input type="radio" name="category" id="category4" value="4">忽略
									</label>
									<label class="nowrap" for="category5">
										<input type="radio" name="category" id="category5" value="5">被欺
									</label>
									<label class="nowrap" for="category6">
										<input type="radio" name="category" id="category6" value="6">性騷擾
									</label>
									<label class="nowrap" for="category7">
										<input type="radio" name="category" id="category7" value="7">職霸凌
									</label>
									<label class="nowrap" for="category8">
										<input type="radio" name="category" id="category8" value="8">誤判
									</label>
								</td>
							</tr>
							<tr>
								<th style="text-align: right;">事件原由：</th>
								<td style="text-align: left;">
									<textarea name="reason" id="reason" rows="5" class="form-control"></textarea>
								</td>
							</tr>
							<tr>
								<td colspan="2">
									<button class="btn btn-blue btn-square" onclick="return doSubmit();">送出</button>
								</td>

							</tr>
						</thead>
					</table>
				</form>
			</div>
		</div>
	</main>


