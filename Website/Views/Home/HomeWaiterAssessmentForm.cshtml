	<script>
		var totalArray = [];

		$(function () {
			$('#homepageBtn').click(function () {
				location.href = "/Home/Director";
			});

			$('#lastPage').click(function () {
				history.back();
			});

			$('.datepicker').datepicker({
				format: "yyyy-mm-dd",
				language: "zh-TW",
				// endDate: new Date(),
				// endDate: '-18y',
				// endDate: '+0d',
				todayHighlight: true
			});

			$('.point').click(function () {
				var info = $(this).attr('info');
				var point = $(this).html();

				$('.chk' + info).remove();
				$(this).append('<i class="chk' + info + ' fas fa-check-circle"></i>');

				totalArray[info] = parseFloat(point);
				// console.log(totalArray);
				countPoint(totalArray);
			})

		});

		function countPoint(totalArray) {
			var total = 0;
			for (var i = 0; i < totalArray.length; i++) {
				if (typeof totalArray[i] != "undefined") {
					total = parseFloat(total) + totalArray[i];
				}
			}

			$('#totalpoint').html(total.toFixed(0));
		}

		function saveGrade() {
			if ($('#name').val() == '') {
				alert('請輸入姓名！');
				$('#name').focus();
				return false;
			}
			else if ($('#occur_date').val() == '') {
				alert('請輸入考核日期！');
				$('#occur_date').focus();
				return false;
			}
			else if (totalArray.length < 20) {
				alert('請完成所有項目的考核！');
				return false;
			}
			else {
				$('#wait,#wait_content').show();

				$.ajax({
					url: "/personnel_assessment/save",
					type: "POST",
					dataType: 'json',
					data: {
						name: $('#name').val(),
						occur_date: $('#occur_date').val(),
						score_detail: totalArray,
						score: $('#totalpoint').html(),
						position: 6
					},
					success: function (data, status, xhr) {
						console.log(data, status, xhr);
						if (data.code == 200) {
							alert(data.message);
							location.href = data.result;
						}
						else {
							alert(data.message);
						}
					},
					error: function (xhr, ajaxOptions, thrownError) {
						console.log(xhr, ajaxOptions, thrownError);
						alert('發生錯誤!');
					}
				});
			}
		}
	</script>
