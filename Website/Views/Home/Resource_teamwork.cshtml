	<script>
		$(function () {
			$('#homepageBtn').click(function () {
				location.href = "/Home/Director";
			});

			$('#lastPage').click(function () {
				 history.back();
				//location.href = "/Home/Link_work";
			});

			$(document).on("click", "#occur_date", function (e) {
				// var rowid = $(e.target).parents("tr").attr("rowid");
				WdatePicker({
					el: e.target,
					autoPickDate: true,
					dateFmt: "yyyy-MM-dd",
					// dateFmt:"yyyy-MM-dd HH:mm:ss",
					// maxDate:"#F{$dp.$D('noticeendtime' + rowid + '')}"
				});
			});
		});

		function doSubmit() {
			var thisform = $('#form1');

			if ($('#year').val() == '' || $('#season').val() == '' || $('#occur_date').val() == '' || $('#unit').val() == '' ||
				$('#purpose').val() == '' || $('#uploadfile01').val() == '' || $('#uploadfile02').val() == '' ||
				$('#uploadfile03').val() == '' || $('#uploadfile04').val() == '') {
				alert('請完整輸入表格內容！');

				var position = $("#year").offset().top;
				$('html, body').animate({
					scrollTop: position * 2 / 3
				}, 1000);

				return false;
			}
			else {
				$('#wait_content').show();
				$('#wait').show();

				thisform.submit();
			}
		}
	</script>
