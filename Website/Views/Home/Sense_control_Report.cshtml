	<script>
		var choosenId = 0;

		$(function () {
			$(document).on("click", "#occur_date", function (e) {
				// var rowid = $(e.target).parents("tr").attr("rowid");
				WdatePicker({
					el: e.target,
					autoPickDate: true,
					dateFmt: "yyyy-MM-dd",
					// dateFmt:"yyyy-MM-dd HH:mm:ss",
					// maxDate:"#F{$dp.$D('noticeendtime' + rowid + '')}"
				});
			});

			// $('.datepicker').datepicker({
			//     language: "zh-TW",
			//     format: 'yyyy-mm-dd',
			//     // startDate: '-3d'
			// });

			$('#homepageBtn').click(function () {
				location.href = "/Home/Supervise";
			});

			$('#lastPage').click(function () {
				history.back();
			});


			$('#addModal').on('hidden.bs.modal', function (e) {
				// do something...
			});

			$('#addModal').on('show.bs.modal', function (event) {
				var button = $(event.relatedTarget);
				var id = button.data('id');
				var userid = button.data('userid');
				var occurdate = button.data('occurdate');
				var reason = button.data('reason');
				var method = button.data('method');
				var modal = $(this);

				modal.find('#id').val(id);
				modal.find('#user_id').val(userid);
				modal.find('#occur_date').val(occurdate);
				modal.find('#reason').val(reason);
				modal.find('#method').val(method);
			});

		});

		function doSubmit() {
			if ($('#reason').val() == '') {
				alert('請輸入藥物名稱！');
				$('#drug_name').focus();
				return false;
			}
			else if ($('#method').val() == '') {
				alert('請輸入藥物數量！');
				$('#counts').focus();
				return false;
			}
			else {
				$('#addModal').hide();
				$('#wait_content').show();
				$('#wait').show();

				$('#form1').submit();
			}
		}

		function toDelete(targetId) {
			if (confirm('確定要刪除？')) {
				$('#wait_content').show();
				$('#wait').show();

				$.ajax({
					url: "/familywork/delete_checkitem_reason",
					type: "POST",
					dataType: 'json',
					data: {
						id: targetId
					},
					success: function (data, status, xhr) {
						console.log(data, status, xhr);

						if (data.code == 200) {
							alert('資料已刪除！');
							location.reload();
						}
						else {
							alert('無此資料!');
						}
					},
					error: function (xhr, ajaxOptions, thrownError) {
						console.log(xhr, ajaxOptions, thrownError);
						alert('發生錯誤!');
					}
				});
			}
		}
	</script>
