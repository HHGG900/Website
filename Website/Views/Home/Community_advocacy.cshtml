	<script>
		$(function () {
			$('#homepageBtn').click(function () {
				location.href = "/Home/Director";
			});

			$('#lastPage').click(function () {
				history.back();
			});

			$(document).on("click", "#occur_date", function (e) {
				// var rowid = $(e.target).parents("tr").attr("rowid");
				WdatePicker({
					el: e.target,
					autoPickDate: true,
					dateFmt: "yyyy-MM-dd",
					// dateFmt:"yyyy-MM-dd HH:mm:ss",
					// maxDate:"#F{$dp.$D('noticeendtime' + rowid + '')}"
				});
			});
		});

		function doSubmit() {
			if ($('#year').val() == '' || $('#season').val() == '' || $('#occur_date').val() == '' || $('#unit').val() == '' || $('#purpose').val() == '' ||
				$('#uploadfile01').val() == '' || $('#uploadfile02').val() == '' || $('#uploadfile03').val() == '' || $('#uploadfile04').val() == ''
			) {
				alert('您所填的表格欄位資料不完整，請確認，謝謝！');
				return false;
			}
			else {
				$('#wait, #wait_content').show();
				$('#form1').submit();
			}
		}
	</script>
