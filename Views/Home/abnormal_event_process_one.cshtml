			// if(typeof prof_consult_str == "undefined")
			// {
			//     alert('請選擇跨專業會診項目！');
			//     $('#prof1').focus();
			//     return false;
			// }

			if (step == 1) {
				if ($('#description').val() == '') {
					alert('請輸入事件描述！');
					$('#description').focus();
					return false;
				}
				else if (total == 0) {
					alert('請選擇跨專業會診！');
					$('#prof1').focus();
					return false;
				}
				else {
					$('#step').val(1);
					$('#wait_content').show();
					$('#wait').show();

					$('#form1').submit();
				}
			}
			else if (step == 2) {
				if ($('#event_handling').val() == '') {
					alert('請輸入事件處理內容！');
					$('#event_handling').focus();
					return false;
				}
				else if ($('#handler').val() == '') {
					alert('請選擇處理人員！');
					$('#handler').focus();
					return false;
				}
				else if ($('#period').val() == '') {
					alert('請選擇追蹤期間！');
					$('#period').focus();
					return false;
				}

				$('#step').val(2);
				$('#wait_content').show();
				$('#wait').show();

				$('#form2').submit();
			}
		}

		function doSearch() {
			var _keywords = $('#keywords');
			var _f = $('#searchModal');
			var _url_tag = "exception_handling/step1";
			var _sn_key = 4;

			if (_keywords.val() == "") {
				alert('請輸入關鍵字！');
				_keywords.focus();
				return false;
			}
			else {
				$.ajax({
					url: "/search/advance",
					type: "POST",
					dataType: 'json',
					data: {
						url_tag: _url_tag,
						sn_key: _sn_key,
						keywords: _keywords.val()
					},
					success: function (data, status, xhr) {
						console.log(data, status, xhr);
						if (data.code == 200) {
							if (data.result == 0) {
								$('.modal-body').html('<span style="font-size:1.5rem;color:red">查無紀錄！</span>');
							}
							else if (data.result.length > 0) {
								_f.find('.modal-body').html('');

								for (var i = 0; i < data.result.length; i++) {
									var innerHtml = '<div class="form-group"><div class="d-inline-block" style="vertical-align:top">(' + (i + 1) +
										').</div> <div class="d-inline-block" style="width:90%;"><a href="javascript:void(0);" onclick="copyTo(\'' +
										data.result[i] + '\');">' + data.desc[i] + '</a></div></div>';

									_f.find('.modal-body').append(innerHtml);
								}
							}
						}
						else {
							alert('無此資料!');
							return false;
						}
					},
					error: function (xhr, ajaxOptions, thrownError) {
						console.log(xhr, ajaxOptions, thrownError);
						alert('發生錯誤!');
						return false;
					}
				});

				_f.modal('show');
			}
		}

		function copyTo(keyword) {
			var enterStr = keyword + '\r\n';

			$('#event_handling').append(enterStr);
		}
