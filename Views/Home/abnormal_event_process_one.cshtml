			$("input[name=indicator][value='3']").prop("checked", true);


			$('input[type=checkbox]').click(function () {
				var ret = $(this).prop("checked");

				if (ret) total++;
				else total--;

				if (total > 2) {
					alert('跨專業會診不能選超過2項！');
					total--;
					return false;
				}
			})
		});

		function doSubmit(step) {
			var thisform = $('#form1');
