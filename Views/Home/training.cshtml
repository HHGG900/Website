	<main class="main">
		<form action="">
			<div class="wrapper">
				<div class="tableContainer">
					<table>
						<thead>
							<tr>
								@*<th>項次</th>*@
								<th>訓練年度</th>
								<th>受訓者</th>
								<th>課程名稱</th>
								<th>課程類型</th>
								<th>時數</th>
								<th>訓練單位</th>
							</tr>
						</thead>
						<tbody>
							@try
							{
								foreach (Internal_and_external_training tarin in training)
								{
									<tr>
										<td style="width: 5%;" hidden="hidden">
											@tarin.year
										</td>
										<td style="width: 10%;">
											@tarin.year
										</td>
										<td style="width: 15%;">
											@tarin.name
										</td>
										<td style="width: 25%;">
